---
import Breadcrumbs from "@/components/Breadcrumbs.astro"
import DepartmentCard from "@/components/DepartmentCard.astro"
import { DEPARTMENTS } from "@/data/departments"
import SearchLayout from "@/layouts/SearchLayout.astro"

const pathname = Astro.originPathname
console.log("patname", pathname)

const breadcrumbsItems = [
	{ name: "Home", href: "/" },
	{ name: "Hoteles", href: "/hotels", current: true },
]
---

<SearchLayout title="Hoteles en Bolivia" producType="hotels">
	<main
		role="main"
		id="content"
		class="mx-auto my-8 max-w-7xl rounded-lg p-8 leading-relaxed shadow-lg"
	>
		<Breadcrumbs items={breadcrumbsItems} />

		<h1 class="mb-5 mt-8 text-4xl font-bold text-gray-100">Hoteles en Bolivia</h1>
		<p class="mb-8 text-gray-100">
			Encuentra los mejores hoteles, hostales y lodges para tu estadía en Bolivia.
		</p>

		<div class="flex flex-col gap-8 md:flex-row">
			<ul
				id="zonas-bolivia"
				class="sidebar flex-shrink-0 rounded-lg bg-gray-50 p-6 shadow-md md:w-64"
			>
				<li class="mb-4 flex items-center text-lg font-semibold text-gray-900">
					<i class="fi fi-up-dir mr-2 text-blue-600"></i> Zonas populares
				</li>
				<li>
					<a
						href="/es/hoteles-la-paz.htm"
						class="block rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600"
						>La Paz</a
					>
				</li>
				<li>
					<a
						href="/es/hoteles-uyuni.htm"
						class="block rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600"
						>Uyuni</a
					>
				</li>
				<li>
					<a
						href="/es/hoteles-santa-cruz.htm"
						class="block rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600"
						>Santa Cruz</a
					>
				</li>
				<li>
					<a
						href="/es/hoteles-copacabana.htm"
						class="block rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600"
						>Copacabana</a
					>
				</li>
				<li>
					<a
						href="/es/hoteles-copacabana.htm"
						class="block rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600"
						>Cochabamba</a
					>
				</li>
			</ul>

			<!-- departamentos -->
			<section class="listado mini flex-grow">
				<ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
					{
						DEPARTMENTS.map((dept, i) => (
							<li>
								<DepartmentCard
									id={dept.id}
									name={dept.name}
									description={`Descubre los mejores alojamientos en ${dept.name}.`}
									imageUrl={
										dept.imageUrl ? dept.imageUrl : `https://picsum.photos/290/183?random=${i + 20}`
									}
									producType="hotels"
								/>
							</li>
						))
					}
				</ul>
			</section>
		</div>

		<article class="links mt-12">
			<h2 class="mb-6 text-3xl font-bold text-gray-100">Hoteles por tipo de alojamiento</h2>
			<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
				<section>
					<h3 class="mb-4 text-xl font-semibold text-gray-100">Hoteles</h3>
					<ul class="m-0 list-none space-y-2 p-0">
						<li>
							<a href="/es/hoteles/5-estrellas.htm" class="text-blue-600 hover:underline"
								>5 Estrellas</a
							>
						</li>
						<li>
							<a href="/es/hoteles/4-estrellas.htm" class="text-blue-600 hover:underline"
								>4 Estrellas</a
							>
						</li>
						<li>
							<a href="/es/hoteles/3-estrellas.htm" class="text-blue-600 hover:underline"
								>3 Estrellas</a
							>
						</li>
					</ul>
				</section>

				<section>
					<h3 class="mb-4 text-xl font-semibold text-gray-100">Hostales</h3>
					<ul class="m-0 list-none space-y-2 p-0">
						<li>
							<a href="/es/hostales/centro.htm" class="text-blue-600 hover:underline"
								>En el Centro</a
							>
						</li>
						<li>
							<a href="/es/hostales/economicos.htm" class="text-blue-600 hover:underline"
								>Económicos</a
							>
						</li>
					</ul>
				</section>

				<section>
					<h3 class="mb-4 text-xl font-semibold text-gray-100">Ecolodges</h3>
					<ul class="m-0 list-none space-y-2 p-0">
						<li>
							<a href="/es/ecolodges/amazonas.htm" class="text-blue-600 hover:underline">Amazonas</a
							>
						</li>
						<li>
							<a href="/es/ecolodges/altiplano.htm" class="text-blue-600 hover:underline"
								>Altiplano</a
							>
						</li>
					</ul>
				</section>

				<section>
					<h3 class="mb-4 text-xl font-semibold text-gray-100">Resorts</h3>
					<ul class="m-0 list-none space-y-2 p-0">
						<li>
							<a href="/es/resorts/lujo.htm" class="text-blue-600 hover:underline">De Lujo</a>
						</li>
						<li>
							<a href="/es/resorts/familiares.htm" class="text-blue-600 hover:underline"
								>Familiares</a
							>
						</li>
					</ul>
				</section>
			</div>
		</article>
	</main>
</SearchLayout>
