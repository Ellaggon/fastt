		<p class="mb-6 text-lg text-gray-600">{hotelData.address}</p>

		<ImageGallery images={hotelData.images} hotelName={hotelData.name} />

		<section id="ficha" class="mt-8">
			<ul class="flex border-b border-gray-200" role="tablist">
				<li>
					<button
						type="button"
						role="tab"
						aria-controls="tab-overview"
						aria-selected="true"
						id="tab-btn-overview"
						class="active-tab-btn border-b-2 border-transparent px-6 py-3 text-sm font-medium text-gray-600 transition-colors duration-200 hover:border-blue-300 hover:text-blue-600 focus:border-blue-500 focus:text-blue-600 focus:outline-none"
					>
						Información General
					</button>
				</li>
				<li>
					<button
						type="button"
						role="tab"
						aria-controls="tab-mapa"
						aria-selected="false"
						id="tab-btn-mapa"
						class="border-b-2 border-transparent px-6 py-3 text-sm font-medium text-gray-600 transition-colors duration-200 hover:border-blue-300 hover:text-blue-600 focus:border-blue-500 focus:text-blue-600 focus:outline-none"
					>
						Mapa
					</button>
				</li>
				<li>
					<button
						type="button"
						role="tab"
						aria-controls="tab-reservar"
						aria-selected="false"
						id="tab-btn-reservar"
						class="border-b-2 border-transparent px-6 py-3 text-sm font-medium text-gray-600 transition-colors duration-200 hover:border-blue-300 hover:text-blue-600 focus:border-blue-500 focus:text-blue-600 focus:outline-none"
					>
						Reservar
					</button>
				</li>
			</ul>

			<div
				id="tab-content-overview"
				role="tabpanel"
				aria-labelledby="tab-btn-overview"
				class="tab-content mt-6"
			>
				<HotelInfo
					description={hotelData.description}
					services={hotelData.services}
					roomFeatures={hotelData.roomFeatures}
				/>
			</div>

			<div
				id="tab-content-mapa"
				role="tabpanel"
				aria-labelledby="tab-btn-mapa"
				class="tab-content mt-6 hidden rounded-lg bg-white p-6 shadow-sm"
			>
				<h2 class="mb-4 text-2xl font-bold text-gray-900">Mapa del Hotel</h2>
				<p class="mb-4 text-gray-700">Ubicación: {hotelData.address}</p>
				<div
					class="flex h-80 w-full items-center justify-center rounded-md bg-gray-200 text-lg text-gray-500"
				>
					{/* Aquí integrarías un mapa real con una API (ej. Google Maps, OpenStreetMap) */}
					Mapa interactivo iría aquí (requiere integración con API de mapas)
					<br />
					Coordenadas: Latitud {hotelData.coordinates.latitude}, Longitud {
						hotelData.coordinates.longitude
					}
				</div>
			</div>

			<div
				id="tab-content-reservar"
				role="tabpanel"
				aria-labelledby="tab-btn-reservar"
				class="tab-content mt-6 hidden"
			>
				<BookingForm />
			</div>
		</section>
	</main>
</Layout>

<script is:inline>
	// Simple JavaScript para la funcionalidad de pestañas
	document.addEventListener("DOMContentLoaded", () => {
		const tabButtons = document.querySelectorAll('[role="tab"]')
		const tabContents = document.querySelectorAll(".tab-content")

		const activateTab = (tabId) => {
			// Desactivar todos los botones y contenidos
			tabButtons.forEach((btn) => {
				btn.setAttribute("aria-selected", "false")
				btn.classList.remove("active-tab-btn")
				btn.classList.remove("border-blue-600", "text-blue-600")
				btn.classList.add("border-transparent", "text-gray-600")
			})
			tabContents.forEach((content) => content.classList.add("hidden"))

			// Activar el botón y contenido seleccionados
			const selectedButton = document.getElementById(`tab-btn-${tabId}`)
			const selectedContent = document.getElementById(`tab-content-${tabId}`)

			if (selectedButton && selectedContent) {
				selectedButton.setAttribute("aria-selected", "true")
				selectedButton.classList.add("active-tab-btn")
				selectedButton.classList.remove("border-transparent", "text-gray-600")
				selectedButton.classList.add("border-blue-600", "text-blue-600")
				selectedContent.classList.remove("hidden")
			}
		}

		tabButtons.forEach((button) => {
			button.addEventListener("click", (event) => {
				const tabId = event.currentTarget.id.replace("tab-btn-", "")
				activateTab(tabId)
			})
		})

		// Activar la primera pestaña por defecto al cargar
		activateTab("overview")
	})
</script>

