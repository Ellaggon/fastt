<style is:global>
	body {
		background: linear-gradient(135deg, #e0e5ec, #f0f2f5, #e0eaf2);
		background-size: 400% 400%;
		animation: gradientFlowLight 20s ease infinite;
	}

	@keyframes gradientFlowLight {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	/* Estilos para el select personalizado que no son triviales con Tailwind */
	.custom-select-wrapper::after {
		content: "▼";
		position: absolute;
		right: 10px;
		top: 50%;
		transform: translateY(-50%);
		color: #666;
		pointer-events: none;
	}

	/* Oculta los elementos móviles por defecto en escritorio, se muestran con JS si es necesario */
	@media (min-width: 768px) {
		.solo_mobile {
			display: none !important;
		}
		#header .solo_mobile {
			display: none !important;
		}
	}

	/* Estilos específicos para la flecha de expansión/colapso */
	.lista li.mas .expand {
		cursor: pointer;
		margin-right: 5px;
		display: inline-block; /* Para que el icono de flecha se vea bien */
		width: 1em; /* Asegura un ancho fijo para la flecha */
		text-align: center;
	}

	/* Ajustes responsive para el menú principal en móvil */
	@media (max-width: 767px) {
		#mainMenu {
