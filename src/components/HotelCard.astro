interface Hotel {
	name: string
	href: string
	image: string
	alt: string
	stars: number
	address: string
	description: string
	priceUSD?: number
	priceCLP?: number
	services: { name: string; free?: boolean; available: boolean }[]
}

interface Props {
	hotel: Hotel
}

const { hotel } = Astro.props

