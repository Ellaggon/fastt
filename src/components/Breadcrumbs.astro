---
// src/components/Breadcrumbs.astro
interface Props {
	items: { name: string; href: string; current?: boolean }[]
}

const { items } = Astro.props
---

<nav aria-label="Breadcrumb">
	<ol class="flex items-center space-x-2 text-sm text-gray-600">
		{
			items.map((item, index) => (
				<li class="flex items-center">
					{index > 0 && (
						<svg
							class="mx-2 h-4 w-4 text-gray-300"
							fill="currentColor"
							viewBox="0 0 20 20"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								fill-rule="evenodd"
								d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 001.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
								clip-rule="evenodd"
							/>
						</svg>
					)}
					<a
						href={item.href}
						class:list={[
							"transition-colors hover:text-blue-600 hover:underline",
							{ "pointer-events-none font-semibold text-gray-900": item.current },
						]}
						aria-current={item.current ? "page" : undefined}
					>
						{item.name}
					</a>
				</li>
			))
		}
	</ol>
</nav>
