---
const { hotel } = Astro.props as { hotel: any | null }
---

<section class="space-y-3">
	<h3 class="text-lg font-semibold text-gray-100">Detalles del Hotel</h3>

	<div class="grid grid-cols-2 gap-4">
		<label class="block">
			<span class="text-sm text-gray-300">Estrellas</span>
			<input
				name="stars"
				type="number"
				min="0"
				max="5"
				value={hotel?.stars ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>

		<label class="block">
			<span class="text-sm text-gray-300">Teléfono</span>
			<input
				name="phone"
				type="text"
				value={hotel?.phone ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>
	</div>

	<label class="block">
		<span class="text-sm text-gray-300">Dirección</span>
		<input
			name="address"
			type="text"
			value={hotel?.address ?? ""}
			class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
		/>
	</label>

	<div class="grid grid-cols-2 gap-4">
		<label class="block">
			<span class="text-sm text-gray-300">Email</span>
			<input
				name="email"
				type="email"
				value={hotel?.email ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>

		<label class="block">
			<span class="text-sm text-gray-300">Website</span>
			<input
				name="website"
				type="text"
				value={hotel?.website ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>
	</div>

	<div class="grid grid-cols-2 gap-4">
		<label class="block">
			<span class="text-sm text-gray-300">Check-in (HH:MM)</span>
			<input
				name="checkInTime"
				type="time"
				value={hotel?.checkInTime ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>

		<label class="block">
			<span class="text-sm text-gray-300">Check-out (HH:MM)</span>
			<input
				name="checkOutTime"
				type="time"
				value={hotel?.checkOutTime ?? ""}
				class="mt-1 w-full rounded bg-gray-800 px-3 py-2 text-white"
			/>
		</label>
	</div>
</section>
