---
const { latitude, longitude, address } = Astro.props
---

<div
	id="map-modal"
	class="modal-overlay fixed inset-0 z-30 flex hidden items-center justify-center bg-black bg-opacity-90 backdrop-blur-sm transition-opacity duration-300 md:p-4"
>
	<!-- <div class="relative w-[95%] max-w-2xl rounded-3xl bg-neutral-800 p-5 shadow-lg"> -->
	<!-- <h2 class="mb-4 text-2xl font-semibold text-neutral-900">Ubicación</h2>
		<p class="mb-4 text-neutral-700">{address || "Ver ubicación en el mapa"}</p> -->

	<div id="map-container" class="relative h-[70%] w-[96%] max-w-3xl rounded-3xl lg:static">
		<div id="modal-map" class="h-full w-full rounded-3xl bg-neutral-100"></div>

		<input
			type="text"
			class="hidden"
			id="modal-map-data"
			value={JSON.stringify({ latitude, longitude, address })}
		/>

		<div
			id="modal-map-fallback"
			class="flex hidden h-64 w-full items-center justify-center rounded-lg bg-neutral-100"
		>
			No localizada
		</div>
		<!-- </div> -->
		<button
			id="close-map-modal"
			class="absolute bottom-[-60px] right-[50%] flex h-12 w-12 translate-x-1/2 items-center justify-center rounded-full border-2 bg-black/50 lg:right-10 lg:top-10 lg:h-20 lg:w-20 lg:translate-x-1 lg:border-0 lg:bg-transparent"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-8 w-8 text-2xl font-bold text-white hover:text-gray-400 lg:h-12 lg:w-12 lg:text-5xl"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="3"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<line x1="18" y1="6" x2="6" y2="18"></line>
				<line x1="6" y1="6" x2="18" y2="18"></line>
			</svg>
		</button>
	</div>
</div>

<script>
	import * as L from "leaflet"

	declare global {
		interface Window {
			openMapModal: () => void
		}
	}

	const modal = document.getElementById("map-modal")
	const closeBtn = document.getElementById("close-map-modal")

	const openMapModal = () => {
		modal?.classList.remove("hidden")

		const el = document.getElementById("modal-map-data") as HTMLInputElement | null
		const pd = el ? JSON.parse(el.value || "null") : null

		const mapEl = document.getElementById("modal-map")
		const fallbackEl = document.getElementById("modal-map-fallback")

		if (!pd) {
			mapEl?.classList.add("hidden")
			fallbackEl?.classList.remove("hidden")
			return
		}

		// IMPORTANTE: recrear el mapa solo cuando se abre
		setTimeout(() => {
			const map = L.map("modal-map", { scrollWheelZoom: false }).setView(
				[pd.latitude, pd.longitude],
				14
			)

			L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
				attribution: "&copy; OpenStreetMap contributors",
			}).addTo(map)

			L.marker([pd.latitude, pd.longitude]).addTo(map)
		}, 100)
	}

	closeBtn?.addEventListener("click", () => modal?.classList.add("hidden"))
	window.openMapModal = openMapModal
</script>
