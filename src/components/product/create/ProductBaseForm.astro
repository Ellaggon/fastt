---
const { product } = Astro.props as { product: any }
---

<section>
	<div class="grid gap-6">
		<label class="block text-xs font-medium text-neutral-500 md:text-sm">
			Nombre
			<input
				name="name"
				type="text"
				required
				value={product?.name || ""}
				class="mt-2 block w-full rounded-lg border-transparent bg-neutral-100 px-4 py-3 text-neutral-800 placeholder-neutral-400 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 sm:text-sm"
			/>
		</label>

		<label class="block text-xs font-medium text-neutral-500 md:text-sm">
			Descripci√≥n
			<textarea
				name="description"
				rows="4"
				class="mt-2 block w-full rounded-lg border-transparent bg-neutral-100 px-4 py-3 text-neutral-800 placeholder-neutral-400 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 sm:text-sm"
				>{product?.description || ""}</textarea
			>
		</label>

		<label class="block text-xs font-medium text-neutral-500 md:text-sm">
			Tipo de producto
			<select
				name="productType"
				class="mt-2 block w-full cursor-pointer rounded-lg border-transparent bg-neutral-100 px-4 py-3 text-sm font-medium text-neutral-800 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500"
			>
				<option value="Hotel" selected={String(product?.productType) === "Hotel"}>Hotel</option>
				<option value="Tour" selected={String(product?.productType) === "Tour"}>Tour</option>
				<option value="Package" selected={String(product?.productType) === "Package"}
					>Paquete</option
				>
			</select>
		</label>
	</div>
</section>
