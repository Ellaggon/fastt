---
const { tour } = Astro.props
---

<section class="grid gap-2">
	<p><strong>Duración:</strong> {tour?.duration ?? "—"}</p>
	<p><strong>Nivel:</strong> {tour?.difficultyLevel ?? "—"}</p>
	<p>
		<strong>Idiomas del guía:</strong>
		{
			Array.isArray(tour?.guideLanguages)
				? tour.guideLanguages.join(", ")
				: (tour?.guideLanguages ?? "—")
		}
	</p>
	<p><strong>Incluye:</strong> {tour?.includes ?? "—"}</p>
	<p><strong>No incluye:</strong> {tour?.excludes ?? "—"}</p>
</section>
