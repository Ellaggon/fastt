---
import "leaflet/dist/leaflet.css"

const { hotel } = Astro.props as { hotel: any | null }

let lat = hotel?.latitude ?? -16.5
let lng = hotel?.longitude ?? -68.13
---

<section class="space-y-3">
	<div class="gap-4 space-y-3 md:grid md:grid-cols-2 md:space-y-0">
		<label class="flex flex-col">
			<span class="text-sm text-neutral-500">Estrellas</span>
			<select
				name="stars"
				id="stars"
				class="mt-2 rounded-lg bg-neutral-100 px-2 py-2 text-neutral-500 lg:px-3"
			>
				<option value={hotel?.stars ?? ""}>{hotel?.stars ?? ""}</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</label>

		<label class="block">
			<span class="text-sm text-neutral-500">Teléfono</span>
			<input
				name="phone"
				type="text"
				value={hotel?.phone ?? ""}
				class="mt-1 w-full rounded-lg bg-neutral-100 px-2 py-2 text-neutral-500 lg:px-3"
			/>
		</label>
	</div>

	<label class="mb-7 block">
		<span class="text-sm text-neutral-500">Dirección</span>
		<div>
			<input
				id="hotelAddress"
				name="address"
				type="text"
				value={hotel?.address ?? ""}
				class="mt-1 w-full rounded-lg bg-neutral-100 px-2 py-2 text-neutral-500 lg:px-3"
			/>
		</div>
	</label>

	<!-- Inputs para lat/lng -->
	<div class="grid grid-cols-3 gap-2 text-sm">
		<button
			id="openMapBtn"
			type="button"
			class="my-1 rounded-xl bg-neutral-600 px-3 py-2 text-white hover:bg-neutral-700 md:my-0 xl:mr-12"
		>
			Mapa
		</button>
		<label class="flex flex-col lg:block">
			<span class="text-neutral-500">Latitud</span>
			<input
				type="text"
				name="latitude"
				id="latitude"
				value={lat}
				class="mt-1 w-24 rounded-md bg-neutral-100 px-2 py-2 lg:px-3"
			/>
		</label>
		<label class="flex flex-col lg:block">
			<span class="text-neutral-500">Longitud</span>
			<input
				type="text"
				name="longitude"
				id="longitude"
				value={lng}
				class="mt-1 w-24 rounded-md bg-neutral-100 px-2 py-2 lg:px-3"
			/>
		</label>
	</div>

	<div class="gap-4 space-y-3 md:grid md:grid-cols-2 md:space-y-0">
		<label class="block">
			<span class="text-sm text-neutral-500">Email</span>
			<input
				name="email"
				type="email"
				value={hotel?.email ?? ""}
				class="mt-1 w-full rounded-lg bg-neutral-100 px-2 py-2 text-neutral-500 lg:px-3"
			/>
		</label>

		<label class="block">
			<span class="text-sm text-neutral-500">Website</span>
			<input
				name="website"
				type="text"
				value={hotel?.website ?? ""}
				class="mt-1 w-full rounded-lg bg-neutral-100 px-2 py-2 text-neutral-500 lg:px-3"
			/>
		</label>
	</div>
</section>
